<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sns.like.mapper.LikeMapper">
	<select id="selectLikeByPostIdUserId" parameterType="int" resultType="com.sns.like.domain.Like">
		SELETE
			*
		FROM
			`like`
		WHERE
			`postId` = #{postId},
			`userId` = #{userId}
			
	</select>
	
	
	<insert id="insertComment" parameterType="map">
		INSERT INTO `like`
		(
			`postId`,
			`userId`,
			`createdAt`
		)
		VALUES
		(
			#{postId},
			#{userId},
			NOW()
		)
	</insert>
	
	
	<delete id="deleteLikeByPostIdUserId" parameterType="com.sns.like.domain.Like">
		DELETE
		FROM
			`like`
		WHERE
			`postId` = #{postId},
			`userId` = #{userId}
	</delete>
</mapper>